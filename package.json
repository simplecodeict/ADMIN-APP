{
  "name": "Manu-ayurvedaya-inventory-management-system",
  "version": "0.1.0",
  "description": "Manu Ayurvedaya Inventory Management System",
  "license": "ISC", 
  "author": "SimpleCodeICT",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch . --exec \"electron .\"",
    "build": "electron-packager . Sewanagala-Ayurveda --platform=win32 --arch=x64 --out=dist --overwrite",
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron-pack": "electron-builder"
  },
  "build": {
    "productName": "Sewanagala Ayurvedaya Inventory Management System",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "icon": "public/assets/images/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "nodemon": "^3.1.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "axios": "^1.7.2"
  }
}
